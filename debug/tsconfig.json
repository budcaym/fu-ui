{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "..",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["../src/*"],
            ".story/*": ["/src/*"]
        }
    },
    "exclude": ["sandbox", "lib", "es", "node_modules", "__tests__"]
    // "include": ["src"]
}
